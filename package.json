{
  "name": "smartbrowser",
  "version": "1.0.0",
  "description": "Browser automation assistant with Claude AI integration",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "ts-node tests/test-runner.ts",
    "test:unit": "ts-node tests/test-runner.ts --suites unit",
    "test:integration": "ts-node tests/test-runner.ts --suites integration",
    "test:e2e": "ts-node tests/test-runner.ts --suites e2e",
    "test:performance": "ts-node tests/test-runner.ts --suites performance",
    "test:security": "ts-node tests/test-runner.ts --suites security",
    "test:watch": "ts-node tests/test-runner.ts --watch",
    "test:coverage": "ts-node tests/test-runner.ts --coverage",
    "test:quick": "ts-node tests/test-runner.ts --suites unit,integration --parallel",
    "test:all": "ts-node tests/test-runner.ts --coverage --verbose",
    "test:ci": "ts-node tests/test-runner.ts --coverage --bail --parallel",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:tests": "prettier --write tests/**/*.ts"
  },
  "keywords": [
    "browser-automation",
    "ai-assistant",
    "claude",
    "playwright",
    "chrome-extension"
  ],
  "author": "SmartBrowser Team",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.3",
    "express": "^4.18.2",
    "playwright": "^1.40.0",
    "redis": "^4.6.12",
    "jsdom": "^23.0.1",
    "@mozilla/readability": "^0.4.4",
    "youtube-transcript": "^1.0.6",
    "uuid": "^9.0.1",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "winston": "^3.11.0",
    "joi": "^17.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/uuid": "^9.0.7",
    "@types/jsdom": "^21.1.6",
    "@types/jest": "^29.5.8",
    "typescript": "^5.3.2",
    "ts-node": "^10.9.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}